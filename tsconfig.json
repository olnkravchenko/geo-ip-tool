{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true, 
        "types": ["jest", "node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
